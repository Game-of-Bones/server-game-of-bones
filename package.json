{
  "name": "server-game-of-bones",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "init:db": "ts-node src/database/init.ts",
    "init:test": "ts-node src/database/initTest.ts",
    "test:reset": "npm run init:test && npm run db:sync:test",
    "seed": "ts-node src/server/script/runAllSeeders.ts",
    "seed:users": "ts-node src/server/script/01-users.ts",
    "seed:posts": "ts-node src/server/script/02-posts.ts",
    "seed:comments": "ts-node src/server/script/03-comments.ts",
    "db:sync": "ts-node -e \"require('./src/models').syncDatabase(false).then(() => process.exit(0))\"",
    "db:reset": "ts-node -e \"require('./src/models').syncDatabase(true).then(() => process.exit(0))\"",
    "db:sync:test": "cross-env NODE_ENV=test ts-node -e \"require('./src/models').syncDatabase(false).then(() => process.exit(0))\"",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Game-of-Bones/server-game-of-bones.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Game-of-Bones/server-game-of-bones/issues"
  },
  "homepage": "https://github.com/Game-of-Bones/server-game-of-bones#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.3",
    "cross-env": "^10.1.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
