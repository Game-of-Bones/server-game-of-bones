# ============================================
# GAME OF BONES API - ENVIRONMENT VARIABLES
# ============================================

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# DATABASE - DEVELOPMENT
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=game_of_bones_app

# ============================================
# DATABASE - TEST
# ============================================
DB_TEST_HOST=localhost
DB_TEST_PORT=3306
DB_TEST_USER=root
DB_TEST_PASSWORD=
DB_TEST_NAME=game_of_bones_app_test

# ============================================
# JWT CONFIGURATION
# ============================================
# IMPORTANT: Change this to a secure random string in production
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT expiration time (examples: 7d, 24h, 60m)
JWT_EXPIRES_IN=7d

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Example: http://localhost:5173,http://localhost:3000
CORS_ORIGIN=*

# ============================================
# BCRYPT CONFIGURATION
# ============================================
# Number of salt rounds (10-12 recommended)
BCRYPT_ROUNDS=12

# ============================================
# PRODUCTION SETTINGS (uncomment for production)
# ============================================
# NODE_ENV=production
# DB_SSL=true
# DB_SSL_CA=/path/to/ca-certificate.crt
